<UserControl x:Class="MemoryProject.NaamInvoer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryProject"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500"
             >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid x:Name="nameGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="Textbox1" Grid.Column="0" TextAlignment="Center" Width="140" Height="40" FontSize="16" Padding="5" Text="Speler 1"/>
            <TextBox x:Name="Textbox2" Grid.Column="1" TextAlignment="Center" Width="140" Height="40" FontSize="16" Padding="5" Text="Speler 2"/>
        </Grid>
        <Button Grid.Row="1" Width="100" Height="40" Click="GoToSizeOptions">Start</Button>
    </Grid>
</UserControl>
