<Page x:Class="MemoryProject.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="MainMenu"
      ShowsNavigationUI="False">
       
    <Grid Background="#75ccdd" Width="auto" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" ></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Image Source="Assets/logo.png" Grid.Row="0" Margin="20" ></Image>
        <Frame Name="startFrame" Grid.Row="1" Height="150"></Frame>
            <Image Source="Assets/safe.png" Grid.Row="2" Cursor="Hand" Height="150"></Image>
        <Image Source="Assets/highscore.png" Grid.Row="3" Cursor="Hand" Height="150"></Image>
    </Grid>
</Page>
