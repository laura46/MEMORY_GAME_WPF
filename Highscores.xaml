<Page x:Class="MemoryProject.Highscores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Highscores">

    <Grid Background="#75ccdd" Width="auto" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Source="Assets/VolScherm.png" Grid.Column="0" HorizontalAlignment="Center" Height="900"  Width="900" Grid.RowSpan="3" Margin="0,200,0,0"/>
        <Frame x:Name="navbarFrame" Grid.Row="0" Width="auto"/>
        <Image Source="Assets/Scores.png" Height="250" Width="auto" VerticalAlignment="Top" Margin="246,40,224,0" HorizontalAlignment="Center" Grid.RowSpan="3"/>
        <Grid VerticalAlignment="Top" x:Name="scoreGrid" Grid.Row="2" Margin="0,145,0,0"/>
    </Grid>
</Page>
