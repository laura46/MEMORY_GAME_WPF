<UserControl x:Class="MemoryProject.TimedPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,0,0,240">

        <Popup IsOpen="true" Panel.ZIndex="9999" Name="foutpop" Grid.ColumnSpan="2">
            <TextBlock Name="Fout" Background="Orange" Width="800" TextAlignment="Center" FontSize="25">
                Fout!
            </TextBlock>
        </Popup>
    </Grid>
</UserControl>
