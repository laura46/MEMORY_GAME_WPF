<Page x:Class="MemoryProject.LoadGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadGame">

    <Grid Background="#75ccdd" Width="auto" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Frame x:Name="navbarFrame" Grid.Row="0" Width="auto"/>
        <Image Source="Assets/VolScherm.png" Grid.Column="0" HorizontalAlignment="Center" Height="900"  Width="900" Grid.RowSpan="3" Margin="0,200,0,0"/>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Label Grid.Row="0" FontSize="30" Height="90"  HorizontalAlignment="Center" Margin="0,50,0,0">OPGESLAGEN SPELLEN</Label>

            </Grid>
        </DockPanel>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Name="savedGames" Width="671" Grid.Row="1" ShowGridLines="True" Height="320" Margin="58,200,71,0" Grid.RowSpan="2">

            <Label ></Label>
        </Grid>
    </Grid>

</Page>
