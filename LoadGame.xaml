<Page x:Class="MemoryProject.LoadGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject"
      mc:Ignorable="d" 
      Title="LoadGame" Background="#75ccdd" >

    <Grid Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Name="navbarFrame" NavigationUIVisibility="Hidden" Grid.Row="0"></Frame>
        <Image Source="Assets/VolScherm.png" Grid.Column="0" HorizontalAlignment="Center" Height="900"  Width="900" Grid.RowSpan="3" Margin="0,200,0,0"/>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Label Grid.Row="0" FontSize="30" Height="90"  HorizontalAlignment="Center">OPGESLAGEN SPELLEN</Label>

            </Grid>
        </DockPanel>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Name="savedGames" Width="auto" Grid.Row="1" ShowGridLines="True">

            <Label ></Label>
        </Grid>
    </Grid>

</Page>
