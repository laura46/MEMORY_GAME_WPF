<Page x:Class="MemoryProject.EndScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndScreen">

    <Grid Background="#75ccdd">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image MouseDown="Image_MouseDown" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Source="Assets/Menu.png" Grid.Row="0" Cursor="Hand"></Image>
        <Frame Name="player1Frame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        <Frame Name="player2Frame" NavigationUIVisibility="Hidden" Grid.Row="2"></Frame>
        <Frame Name="timerFrame" NavigationUIVisibility="Hidden" Grid.Row="3"></Frame>
        
    </Grid>
</Page>
